; Structure of the Device-Status-Table

STRUC   Status

        Stat            db      grOk    ; Current Device Status (0 = No Errors)
        DevTyp          db      0       ; Device Type Identifier (must be 0)
        XRes            dw      ?       ; Device Full Resolution in X Direction
        YRes            dw      ?       ; Device Full Resolution in Y Direction
        XEfRes          dw      ?       ; Device Effective X Resolution
        YEfRes          dw      ?       ; Device Effective Y Resolution
        XInch           dw      10000   ; Device X Size in inches*1000
        YInch           dw      7500    ; Device Y Size in inches*1000
        Aspec           dw      ?       ; Aspect Ratio = (y_size/x_size) * 10000
        CharSizeX       db      8       ; Character height
        CharSizeY       db      8       ; Character width
        Compat          dw      9090h   ; Compatibility Value

ENDS    Status



; Table structure for all important values of a video mode

STRUC   TMode

        XRes            dw      ?       ; Number of pixels in X direction
        YRes            dw      ?       ; Number of pixels in Y direction
        ModeName        dw      ?       ; Pointer to string with name
        BIOSax          dw      ?       ; Register ax for BIOS call or similar
        BIOSbx          dw      ?       ; Register bx for BIOS call or similar
        CardType        db      ?       ; Card number
        Capabilities    db      ?       ; BitSet of supported modes
        GraphOn         dw      ?       ; additional specific switch routine

ENDS    TMode


; VESA info block

STRUC   VESA_InfoBlock

        Mode_Attributes         dw      ?       ; Mode attributes
        Win_A_Attributes        db      ?       ; Attributes of window A
        Win_B_Attributes        db      ?       ; ditto, window B
        Win_Granularity         dw      ?       ; Window granularity in KB
        Win_Size                dw      ?       ; Window size in KB
        Win_A_Segment           dw      ?       ; Segment address window A
        Win_B_Segment           dw      ?       ; Segment address window B
        WinFunc                 dd      ?       ; Pointer to switch routine
        BytesPerLine            dw      ?       ; Bytes per line

ENDS    VESA_InfoBlock


; Real-Mode Regs structure for real-mode INTs from protected mode

STRUC   RealModeRegs

        rDI             dw      0, 0
        rSI             dw      0, 0
        rPB             dw      0, 0
        rRes            dw      0, 0
        rBX             dw      0, 0
        rDX             dw      0, 0
        rCX             dw      0, 0
        rAX             dw      0, 0
        rFlags          dw      0
        rES             dw      0
        rDS             dw      0
        rFS             dw      0
        rGS             dw      0
        rIP             dw      0
        rCS             dw      0
        rSP             dw      0
        rSS             dw      0

ENDS    RealModeRegs


